<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <RootNamespace>KidsTown.Application</RootNamespace>
        <IsPackable>false</IsPackable>
        <SpaRoot>ClientApp\kidstown</SpaRoot>
        <DefaultItemExcludes>$(DefaultItemExcludes);$(SpaRoot)node_modules\**</DefaultItemExcludes>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MailKit" Version="4.9.0"/>
        <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="9.0.0"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\BackgroundTasks\BackgroundTasks.csproj"/>
        <ProjectReference Include="..\Database\Database.csproj"/>
        <ProjectReference Include="..\KidsTown.Shared\KidsTown.Shared.csproj"/>
        <ProjectReference Include="..\KidsTown\KidsTown.csproj"/>
    </ItemGroup>

    <Target Name="BuildFrontend" BeforeTargets="Build">
        <Exec Command="npm install" WorkingDirectory="./ClientApp/kidstown" />
        <Exec Command="npm run build" WorkingDirectory="./ClientApp/kidstown" />
    </Target>

    <Target Name="CopyFrontendFiles" AfterTargets="Build">
        <ItemGroup>
            <FrontendFiles Include="./ClientApp/kidstown/out" />
        </ItemGroup>
        <Copy SourceFiles="@(FrontendFiles)" DestinationFolder="$(WebRootPath)\%(RecursiveDir)" />
    </Target>

</Project>
